class Conta():
    def __init__(self, numero, titular, saldo, limite):
        self.numero = numero
        self.titular = titular
        self.saldo = saldo
        self.limite = limite


    def deposita(self, valor):
        self.saldo += valor
        
        
    def sacar(self, valor):
        if (self.saldo < valor)
            return False

        else:
            self.saldo -= valor
            return True
            
    def extrato(self):
        print(f"{self.titular}\no "
              f"seu saldo "
              f"Ã©: {self.saldo}")

    def transferir(self, destinado, valor):
        retirou = self.sacar(valor)
        if (retirou == False):
            return False
        else:
            destino.deposita(valor)
